<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="MageNet_MagicApi::all" title="MageNet All" translate="title" sortOrder="30" >
                    <resource id="MageNet_MagicApi::system_config" title="System Config" translate="title" sortOrder="50" />
                    <resource id="MageNet_MagicApi::payment_transaction_grid" title="Payment Transaction Grid" translate="title" sortOrder="10" >
                        <resource id="MageNet_MagicApi::payment_transaction_view" title="Payment Transaction View" translate="title" sortOrder="10" />
                        <resource id="MageNet_MagicApi::payment_transaction_edit" title="Payment Transaction Edit" translate="title" sortOrder="10" />
                        <resource id="MageNet_MagicApi::payment_transaction_delete" title="Payment Transaction Delete" translate="title" sortOrder="10" />
                    </resource>
                    <resource id="MageNet_MagicApi::billing_address_grid" title="Billing Address Grid" translate="title" sortOrder="10" >
                        <resource id="MageNet_MagicApi::billing_address_view" title="Billing Addres View" translate="title" sortOrder="10" />
                        <resource id="MageNet_MagicApi::billing_address_edit" title="Billing Addres Edit" translate="title" sortOrder="10" />
                        <resource id="MageNet_MagicApi::billing_address_delete" title="Billing Addres Delete" translate="title" sortOrder="10" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
